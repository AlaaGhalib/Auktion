@model Auktion.Models.Auctions.AuctionVm

@{
    ViewData["Title"] = "Edit Auction Description";
}

<h2>Edit Auction Description</h2>

<form asp-action="Edit" method="post">
    <!-- Hidden field for AuctionId -->
    <input type="hidden" asp-for="AuctionId" />

    <!-- Title (Read-only Display with Hidden Input) -->
    <div class="form-group">
        <label asp-for="Title"></label>
        <p class="form-control-plaintext">@Model.Title</p> <!-- Non-editable display -->
        <input type="hidden" asp-for="Title" /> <!-- Hidden input to retain value -->
    </div>

    <!-- Editable Description -->
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea> <!-- Editable -->
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Starting Price (Read-only Display with Hidden Input) -->
    <div class="form-group">
        <label asp-for="StartingPrice"></label>
        <p class="form-control-plaintext">@Model.StartingPrice.ToString("C")</p> <!-- Non-editable display -->
        <input type="hidden" asp-for="StartingPrice" /> <!-- Hidden input to retain value -->
    </div>

    <!-- Start Time (Read-only Display with Hidden Input) -->
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <p class="form-control-plaintext">@Model.StartTime.ToString("f")</p> <!-- Non-editable display -->
        <input type="hidden" asp-for="StartTime" /> <!-- Hidden input to retain value -->
    </div>

    <!-- End Time (Read-only Display with Hidden Input) -->
    <div class="form-group">
        <label asp-for="EndTime"></label>
        <p class="form-control-plaintext">@Model.EndTime.ToString("f")</p> <!-- Non-editable display -->
        <input type="hidden" asp-for="EndTime" /> <!-- Hidden input to retain value -->
    </div>

    <!-- Submit and Cancel Buttons -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
