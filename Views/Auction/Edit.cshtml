@model Auktion.Models.Auctions.AuctionVm

@{
ViewData["Title"] = "Edit Auction";
}

<h2>Edit Auction</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AuctionId" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartingPrice"></label>
        <input asp-for="StartingPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="StartingPrice" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
