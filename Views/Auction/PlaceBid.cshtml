@model Auktion.Models.Auctions.BidVm

@{
ViewData["Title"] = "Place a Bid";
}

<h2>Place a Bid</h2>

<form asp-action="PlaceBid" method="post">
    <!-- Use ViewBag to set the AuctionId as a hidden field -->
    <input type="hidden" name="auctionId" value="@ViewBag.AuctionId" />

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Bid</button>
</form>

<a asp-action="Details" asp-route-id="@ViewBag.AuctionId" class="btn btn-secondary">Back to Auction</a>
