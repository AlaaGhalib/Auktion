@model Auktion.Models.Auctions.AuctionVm

@{
ViewData["Title"] = "Delete Auction";
}

<h2>Delete Auction</h2>

<div>
    <h4>Are you sure you want to delete this auction?</h4>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>
    <p>Starting Price: @Model.StartingPrice</p>
    <p>Start Time: @Model.StartTime</p>
    <p>End Time: @Model.EndTime</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.AuctionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageAuctions" class="btn btn-secondary">Cancel</a>
</form>

